<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mItemCV"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mItemServiceImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/item_service_icon"
            android:padding="@dimen/padding_8"
            android:src="@drawable/ic_atm" />

        <LinearLayout
            android:id="@+id/mItemContentLN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_8"
            android:paddingTop="@dimen/padding_16"
            android:paddingRight="@dimen/padding_8"
            android:paddingBottom="@dimen/padding_16">

            <TextView
                android:id="@+id/mItemNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ha_noi_viet_nam"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

            <TextView
                android:id="@+id/mItemAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ha_noi_viet_nam"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />


        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>